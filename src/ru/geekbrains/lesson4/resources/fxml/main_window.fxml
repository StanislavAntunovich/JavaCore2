<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import java.net.URL?>
<VBox id="main-window"
      xmlns:fx="http://javafx.com/fxml/1"
      xmlns="http://javafx.com/javafx/2.2"
      fx:controller="ru.geekbrains.lesson4.Controller">

    <TextArea id="messages-area" fx:id="areaMessages" editable="false" VBox.vgrow="ALWAYS"/>

    <HBox id="bottom-box"
          spacing="5.0">

        <TextField fx:id="txtMessageInput"
                   promptText="Введите сообщение"
                   HBox.hgrow="ALWAYS"/>

        <Button fx:id="bttnSendMessage"
                text="Отправить"/>
    </HBox>

    <stylesheets>
        <URL value="@../css/styles.css"/>
    </stylesheets>

</VBox>
